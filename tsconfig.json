{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es6",
        "downlevelIteration": true,
        "isolatedModules": false,
        "lib": [
            "es6"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./node_modules"
    ]
}